Promise.all = (promises) =&gt; {
    return new Promise((resolve, reject) =&gt; {
        let arr = []
        let index = 0
        let processData = (i, data) =&gt; {
            arr[i] = data
            if (++index === promises.length) {
                resolve(arr)
            }
        }
        for (let i = 0; i &lt; promises.length; i++) {
            let cur = promises[i]
            if (isPromise(cur)) {
                cur.then(y =&gt; {
                    processData(i, y)
                    // resolve(y)
                }, r =&gt; reject(r))
            } else {
                processData(i, cur)
            }
        }
    })
}
